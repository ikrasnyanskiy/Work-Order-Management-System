@model IEnumerable<WorkOrderManagementSystem.Controllers.BicycleWithAssoc>

<table class="table">
    <tr>
        <th>
            Bicycle #
        </th>
        <th>
            Bicycle Description
        </th>
        <th>
            Manufacturer
        </th>
        <th>
            Model
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.ManufacturerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModelName)
        </td>
       
        <td>
            @Html.ActionLink("Edit This Bike", "../Bicycles/Edit", new { id=item.Id }) |
            @Html.ActionLink("Details about This Bike", "../Bicycles/Details", new { id=item.Id }) |
            @if (item.Deactivated == false)
            {
                @Html.ActionLink("Deactivate", "../Bicycles/Deactivate", new { id = item.Id },new { @style = "color:#ff0000;" })
            }
            else
            {
                @Html.ActionLink("Activate", "../Bicycles/Activate", new { id = item.Id }, new { @style = "color:#008000;" })
            }
        </td>
    </tr>
}

</table>
