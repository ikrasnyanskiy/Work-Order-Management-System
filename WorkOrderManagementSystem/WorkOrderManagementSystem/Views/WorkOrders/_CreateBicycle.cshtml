    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/App/core.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.min.js"></script>
